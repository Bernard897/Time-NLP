# Date related regex
year = (\d{4}|\d{2})
month = (0?[1-9]|1[0-2])
day = (0?[1-9]|[12][0-9]|3[01])

yyyy_mm_dd = ${year}[-|/](0?[1-9]|1[0-2])[-|/](0?[1-9]|[12][0-9]|3[01])
date = ${month}月${day}日
next_week = 下[个]?星期|下[个]?礼拜|下周
last_week = 上[个]?星期|上[个]?礼拜|上周
this_week = 这[个]?星期|这[个]?礼拜|本周
next_month = 下[个]?月
last_month = 上[个]?月
this_month = 这[个]?月|本月
next_year = 明年
last_year = 去年
this_year = 今年
